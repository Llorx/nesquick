{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ESNext",
        "removeComments": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": false,
        "lib": ["DOM", "ESNext"]
    },
    "exclude": [
        "./lib"
    ],
    "include": [
        "./src/index.ts"
    ]
}