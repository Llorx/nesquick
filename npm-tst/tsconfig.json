{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["dom", "esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "removeComments": true,
        "declaration": true,
        "declarationDir": "./lib/types",
        "inlineSourceMap": true,
        "outDir": "./lib",
        "jsx": "react-jsx",
        "jsxImportSource": "veact"
    },
    "include": [
        "./src",
        "./src/**/*.test.ts"
    ]
}